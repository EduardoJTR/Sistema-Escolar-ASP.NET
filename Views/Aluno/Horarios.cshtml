@{
    Layout = "~/Views/Shared/StudentLayout.cshtml";
    ViewData["Title"] = "Área do Aluno";
    string[] WeekDays = ["Seg", "Ter", "Qua", "Qui", "Sex"];
}

<html>
    <body class="bg-light">
        <div class="container py-4">
            @foreach (string WeekDay in WeekDays)
            {
                @switch (WeekDay)
                {
                    case "Seg":
                        <h4 class="text-primary mt-4">Segunda-Feira</h4>
                        break;
                    case "Ter":
                        <h4 class="text-primary mt-4">Terça-Feira</h4>
                        break;
                    case "Qua":
                        <h4 class="text-primary mt-4">Quarta-Feira</h4>
                        break;
                    case "Qui":
                        <h4 class="text-primary mt-4">Quinta-Feira</h4>
                        break;
                    case "Sex":
                        <h4 class="text-primary mt-4">Sexta-Feira</h4>
                        break;
                }
                <div class="card mb-4 shadow-sm">
                    <div class="card-body p-0">
                        <table class="table table-bordered table-striped m-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Horário</th>
                                    <th>Disciplina</th>
                                    <th>Professor</th>
                                    <th>Sala</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var horario in Model._horarios)
                                {
                                    @if (horario.WeekDay == WeekDay)
                                    {
                                        <tr>
                                            <td>@horario.StartTime.ToString("HH:mm") - @horario.EndTime.ToString("HH:mm")</td>
                                            <td>@horario.SubjectName</td>
                                            <td>@horario.TeacherName</td>
                                            <td>@horario.ClassRoomName</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </body>
</html>

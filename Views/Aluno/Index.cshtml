@{
    Layout = "~/Views/Shared/StudentLayout.cshtml";
    ViewData["Title"] = "Área do Aluno";
}

<html>
    <body>
        <div class="container mt-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Área do Aluno</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">Id:</div>
                        <div class="col-md-9" id="userId">@Model.UserId</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">Nome:</div>
                        <div class="col-md-9" id="userName">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">Email:</div>
                        <div class="col-md-9" id="userEmail">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">Classe:</div>
                        <div class="col-md-9" id="userClassName">@Model.ClassName</div>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>